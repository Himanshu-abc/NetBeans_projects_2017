<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MyChatApp</servlet-name>
        <servlet-class>mychatapp.MyChatApp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainScreen</servlet-name>
        <servlet-class>mychatapp.gui.MainScreen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageListener</servlet-name>
        <servlet-class>mychatapp.networking.MessageListener</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageTransmitter</servlet-name>
        <servlet-class>mychatapp.networking.MessageTransmitter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WritableGUI</servlet-name>
        <servlet-class>mychatapp.networking.WritableGUI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyChatApp</servlet-name>
        <url-pattern>/MyChatApp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainScreen</servlet-name>
        <url-pattern>/MainScreen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageListener</servlet-name>
        <url-pattern>/MessageListener</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageTransmitter</servlet-name>
        <url-pattern>/MessageTransmitter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WritableGUI</servlet-name>
        <url-pattern>/WritableGUI</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
